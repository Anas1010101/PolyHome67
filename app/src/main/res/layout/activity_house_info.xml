<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E4F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvHouseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maison"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#2B2B2B"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvHouseStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statut :"
            android:fontFamily="sans-serif-medium"
            android:textColor="#6E6E8A"
            android:layout_marginBottom="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gérer l'accès à un tiers"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etUserLoginAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom de l'utilisateur"
            android:inputType="text"
            android:textColor="#2B2B2B"
            android:textColorHint="#6E6E8A"
            android:backgroundTint="#D8BEE5"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnGiveAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donner accès"
            android:backgroundTint="#D8BEE5"
            android:textColor="#2B2B2B"/>

        <ProgressBar
            android:id="@+id/progressGiveAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:indeterminateTint="#A7ABDE"/>

        <Button
            android:id="@+id/btnRemoveAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retirer accès"
            android:backgroundTint="#A7ABDE"
            android:textColor="#2B2B2B"
            android:layout_marginTop="12dp"/>

        <ProgressBar
            android:id="@+id/progressRemoveAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:indeterminateTint="#A7ABDE"/>

        <TextView
            android:id="@+id/tvGiveAccessMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:textColor="#7A1C2E"
            android:background="#FCDCE1"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnLoadUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voir les utilisateurs"
            android:backgroundTint="#D8BEE5"
            android:textColor="#2B2B2B"
            android:layout_marginTop="16dp"/>

        <ProgressBar
            android:id="@+id/progressUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:indeterminateTint="#A7ABDE"/>

        <ListView
            android:id="@+id/listUsers"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:dividerHeight="10dp"
            android:divider="@android:color/transparent"
            android:visibility="gone"/>


        <Button
            android:id="@+id/btnDevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Lister les périphériques" />

        <Button
            android:id="@+id/btnScenarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Scénarios de la maison"
            android:backgroundTint="#A7ABDE"
            android:textColor="#2B2B2B" />



    </LinearLayout>
</ScrollView>
