<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="#F3E4F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:textSize="28sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="#2B2B2B"
        android:layout_marginBottom="28dp" />

    <EditText
        android:id="@+id/etLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Login"
        android:fontFamily="sans-serif-medium"
        android:inputType="textEmailAddress"
        android:autofillHints="username"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#E8DAF0"
        android:textColor="#2B2B2B"
        android:textColorHint="#6E6E8A" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:fontFamily="sans-serif-medium"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#E8DAF0"
        android:textColor="#2B2B2B"
        android:textColorHint="#6E6E8A" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se connecter"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#A7ABDE"
        android:textColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:visibility="gone"
        android:indeterminateTint="#D8BEE5" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="14dp"
        android:visibility="gone"
        android:fontFamily="sans-serif-medium"
        android:textColor="#7A1C2E"
        android:background="#FCDCE1"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tvGoRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pas de compte ? CrÃ©er un compte"
        android:layout_marginTop="26dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#A7ABDE" />

</LinearLayout>
