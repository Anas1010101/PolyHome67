<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E4F5">

    <LinearLayout
        android:id="@+id/registerRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Créer un compte"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:layout_marginBottom="28dp"/>

        <EditText
            android:id="@+id/etRegisterLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:hint="Login"
            android:fontFamily="sans-serif-medium"
            android:inputType="textEmailAddress"
            android:backgroundTint="#E8DAF0"
            android:textColor="#2B2B2B"
            android:textColorHint="#6E6E8A" />

        <EditText
            android:id="@+id/etRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe"
            android:fontFamily="sans-serif-medium"
            android:inputType="textPassword"
            android:layout_marginBottom="14dp"
            android:backgroundTint="#E8DAF0"
            android:textColor="#2B2B2B"
            android:textColorHint="#6E6E8A" />

        <EditText
            android:id="@+id/etRegisterConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmer le mot de passe"
            android:fontFamily="sans-serif-medium"
            android:inputType="textPassword"
            android:layout_marginBottom="18dp"
            android:backgroundTint="#E8DAF0"
            android:textColor="#2B2B2B"
            android:textColorHint="#6E6E8A" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer le compte"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="#A7ABDE"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/progressRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:visibility="gone"
            android:indeterminateTint="#D8BEE5" />

        <TextView
            android:id="@+id/tvRegisterError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="14dp"
            android:visibility="gone"
            android:fontFamily="sans-serif-medium"
            android:textColor="#7A1C2E"
            android:background="#FCDCE1"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvBackLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Déjà un compte ? Se connecter"
            android:layout_marginTop="26dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#A7ABDE" />

    </LinearLayout>

</ScrollView>
